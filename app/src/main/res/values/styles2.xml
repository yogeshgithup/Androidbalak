<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#5ec5dc</item>

        <item name="colorPrimaryDark">#007c8c</item>
        <item name="colorAccent">#ff4081</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="llmain">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="allbatchll" parent="llmain">
        <item name="android:weightSum">5</item>
    </style>
    <style name="batchwisell" parent="llmain">
        <item name="android:weightSum">6</item>
    </style>
    <style name="contactusll" parent="llmain">
        <item name="android:weightSum">7</item>
    </style>
    <style name="coursetablell" parent="llmain">
        <item name="android:weightSum">1</item>
    </style>
    <style name="textview">

        <item name= "android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">#2988BC</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|start</item>

    </style>

    <style name="tablelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.10</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:stretchColumns">*</item>

    </style>

    <style name="tabletextview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#f26021</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>

    </style>
    <style name="tablelayout_for_timetable_and_ws" parent="tablelayout">
        <item name="android:layout_weight">0.20</item>
    </style>
    <style name="tabletextview_for_timetable_and_ws" parent="tabletextview">
        <item name="android:layout_weight">2</item>
    </style>
    <!--Floating label text style-->
    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFBEBD</item>

    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ff4081</item>
        <item name="colorControlActivated">#ff4081</item>
        <item name="colorControlHighlight">#ff4081</item>
    </style>
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#337BAE</item>
        <item name="colorControlActivated">#FFBEBD</item>
    </style>
</resources>
