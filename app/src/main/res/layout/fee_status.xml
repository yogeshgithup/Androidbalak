<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/feem">


    <TableLayout
        android:id="@+id/tb1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="bottom"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:stretchColumns="*"
        android:weightSum="1"
        tools:ignore="Suspicious0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_gravity="bottom"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/tvcourse"
                style="@style/tabletextview"

                android:padding="0dp"
                android:text="Course Name"
                />

            <TextView
                android:id="@+id/tvfees"
                style="@style/tabletextview"
               android:text="Course Fees"
                android:padding="0dp"
                />

            <TextView
                android:id="@+id/tvfpaid"
                style="@style/tabletextview"
                android:text="Fees paid"
                android:padding="0dp"
                 />

            <TextView
                android:id="@+id/tvfremain"
                style="@style/tabletextview"
                android:padding="0dp"
                android:text="Remaining Fees"
                 />


        </TableRow>


    </TableLayout>

    <ScrollView
        android:id="@+id/scid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="0.85"
        tools:ignore="Suspicious0dp">

        <TableLayout
            android:id='@+id/tablelayout'
            android:layout_width="match_parent"
            android:layout_height="fill_parent"

            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:stretchColumns="*">

            <TableRow
                android:id='@+id/trr'
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">


                <!--android:background="#000"-->


                <TextView
                    android:id="@+id/course"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/fees"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/fpaid"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/fremain"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />


            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>