<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/coursetablell"
    android:weightSum="1"
    android:layout_margin="5dp"
    android:id="@+id/stimem"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tb2"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:gravity="bottom"
        android:stretchColumns="*"
        tools:ignore="Suspicious0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            >

            <TextView
                android:id="@+id/tvday"
                style="@style/tabletextview"

                android:text=""
                />

            <TextView
                android:id="@+id/tvsub"
                style="@style/tabletextview"

                android:text=""
                />

            <TextView
                android:id="@+id/tvslot"
                style="@style/tabletextview"
                android:layout_weight="2"
                android:text="Slot" />

            <TextView
                android:id="@+id/tvbreak"
                style="@style/tabletextview"
                android:layout_weight="2"
                android:text="BreakTime"
                />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:weightSum="6">

            <TextView
                android:id="@+id/tvday1"
                style="@style/tabletextview"

                android:text="Day"
                />

            <TextView
                android:id="@+id/tvsub1"
                style="@style/tabletextview"

                android:text="Subject"
                />

            <TextView
                android:id="@+id/tvslot11"
                style="@style/tabletextview"
                android:text="Start-time"
                android:padding="0dp"/>
            <TextView
                android:id="@+id/tvslot12"
                style="@style/tabletextview"
                android:text="End-time"
                android:padding="0dp"/>

            <TextView
                android:id="@+id/tvslot21"
                style="@style/tabletextview"
                android:text="Start-time"
                android:padding="0dp"/>
            <TextView
                android:id="@+id/tvslot22"
                style="@style/tabletextview"
                android:text="End-time"
                android:padding="0dp"/>


        </TableRow>


    </TableLayout>
</LinearLayout>