<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/coursetablell"
    android:weightSum="10"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:id="@+id/sschm">


    <TableLayout
        android:id="@+id/tb2"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:gravity="bottom"
        android:stretchColumns="*"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        tools:ignore="Suspicious0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            >

            <TextView
                android:id="@+id/tvday"
                style="@style/tabletextview"
                android:text=""
                android:padding="0dp"
                />

            <TextView
                android:id="@+id/tvsub"
                style="@style/tabletextview"
                android:text=""
                android:padding="0dp"
                />

            <TextView
                android:id="@+id/tvslot"
                style="@style/tabletextview"
                android:layout_weight="2"
                android:padding="0dp"
                android:text="Slot" />

            <TextView
                android:id="@+id/tvbreak"
                style="@style/tabletextview"
                android:padding="0dp"
                android:layout_weight="2"
                android:text="BreakTime"
                />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:weightSum="6">

            <TextView
                android:id="@+id/tvday1"
                style="@style/tabletextview"
                android:text="Day"
                android:padding="0dp"
                />

            <TextView
                android:id="@+id/tvsub1"
                style="@style/tabletextview"
                android:text="Subject"
                android:padding="0dp"
                />

            <TextView
                android:id="@+id/tvslot11"
                style="@style/tabletextview"
                android:padding="0dp"
                android:text="Start-time" />
            <TextView
                android:id="@+id/tvslot12"
                style="@style/tabletextview"
                android:padding="0dp"
                android:text="End-time" />

            <TextView
                android:id="@+id/tvslot21"
                style="@style/tabletextview"
                android:padding="0dp"
                android:text="Start-time" />
            <TextView
                android:id="@+id/tvslot22"
                android:padding="0dp"
                style="@style/tabletextview"
                android:text="End-time" />


        </TableRow>


    </TableLayout>
    <ScrollView
        android:id="@+id/scid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="8"
        tools:ignore="Suspicious0dp">

        <TableLayout
            android:id='@+id/tablelayout'
            android:layout_width="match_parent"
            android:layout_height="fill_parent"

            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:stretchColumns="*">

            <TableRow
                android:id='@+id/trr'
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom">


                <!--android:background="#000"-->


                <TextView
                    android:id="@+id/day"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/start1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/end1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/start2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/end2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="1dp"

                    android:layout_weight="1"
                    android:background="#f26021"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:visibility="invisible" />

            </TableRow>

        </TableLayout>
    </ScrollView>
</LinearLayout>